<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruben.turapp.NyTurFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_ny_kunde_label_navn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fragment_ny_kunde_edit_navn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stedsnavn"
                android:inputType="textCapWords"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_ny_kunde_label_beskrivelse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fragment_ny_kunde_edit_beskrivelse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Beskrivelse av stedet"
                android:inputType="textMultiLine"
                android:maxLines="7" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_ny_kunde_label_turtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fragment_ny_kunde_edit_turtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Turtype (eks fjelltopp, strand)"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/fragment_ny_kunde_button_filvelger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:background="@drawable/dark_ic_action_upload"
            android:contentDescription="upload" />

        <ImageButton
            android:id="@+id/fragment_ny_kunde_button_kamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="2"
            android:background="@drawable/dark_ic_action_camera"
            android:contentDescription="camera" />

        <ImageView
            android:id="@+id/fragment_ny_kunde_image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_rowSpan="2"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <Button
            android:id="@+id/fragment_ny_kunde_button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lag ny tur" />

    </LinearLayout>
</ScrollView>
