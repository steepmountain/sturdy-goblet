<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruben.turapp.NyTurFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:id="@+id/fragment_ny_kunde_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fragment_ny_kunde_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fragment_ny_kunde_moh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_ny_kunde_label_navn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/fragment_ny_kunde_edit_navn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Stedsnavn"
                    android:inputType="textCapWords"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_ny_kunde_label_beskrivelse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/fragment_ny_kunde_edit_beskrivelse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Beskrivelse av stedet"
                    android:inputType="textMultiLine"
                    android:maxLines="4" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_ny_kunde_label_turtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/fragment_ny_kunde_edit_turtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Turtype (eks fjelltopp, strand)"
                    android:maxLines="1" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/fragment_ny_kunde_button_kamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Ta bilde" />


            <Button
                android:id="@+id/fragment_ny_kunde_button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Lag ny tur" />

        </LinearLayout>

        <ImageView
            android:id="@+id/fragment_ny_kunde_image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>
