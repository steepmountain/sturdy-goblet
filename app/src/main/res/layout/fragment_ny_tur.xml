<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ruben.turapp.NyTurFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_ny_kunde_label_navn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_ny_kunde_edit_navn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Stedsnavn"
            android:inputType="textCapWords" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_ny_kunde_label_beskrivelse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_ny_kunde_edit_beskrivelse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Beskrivelse av stedet"
            android:inputType="textMultiLine"
            android:maxLines="7" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_ny_kunde_label_turtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_ny_kunde_edit_turtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Turtype (eks fjelltopp, strand)" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/fragment_ny_kunde_button_kamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_ic_action_camera"
        android:contentDescription="camera" />

    <ImageButton
        android:id="@+id/fragment_ny_kunde_button_filvelger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_ic_action_upload"
        android:contentDescription="upload" />

    <Button
        android:id="@+id/fragment_ny_kunde_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lag ny tur" />


</LinearLayout>
