<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ruben.turapp.DetaljertTurFragment">


        <FrameLayout
            android:id="@+id/fragment_detaljert_tur_map"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_detaljert_tur_navn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_detaljert_tur_beskrivelse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_detaljert_tur_turType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_detaljert_tur_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_detaljert_tur_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_detaljert_tur_moh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/fragment_detaljert_tur_bilde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Bilde av turstedet"
            android:src="@drawable/common_google_signin_btn_icon_light" />

    </LinearLayout>

</LinearLayout>
